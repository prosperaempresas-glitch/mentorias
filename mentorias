        function showSection(section) {
            // Esconde tudo
            document.getElementById('quiz').classList.remove('active');
            document.getElementById('cards').classList.remove('active');
            document.getElementById('faq').classList.remove('active');
            document.getElementById('quizResult').classList.remove('active');

            // Mostra seção selecionada
            if (section === 'quiz') {
                document.getElementById('quiz').classList.add('active');
                window.scrollTo({ top: document.getElementById('quiz').offsetTop - 100, behavior: 'smooth' });
            } else if (section === 'cards') {
                document.getElementById('cards').classList.add('active');
                window.scrollTo({ top: document.getElementById('cards').offsetTop - 100, behavior: 'smooth' });
            } else if (section === 'faq') {
                document.getElementById('faq').classList.add('active');
            }
        }

        function calcularQuiz() {
            const q1 = document.querySelector('input[name="q1"]:checked')?.value;
            const q2 = document.querySelector('input[name="q2"]:checked')?.value;
            const q3 = document.querySelector('input[name="q3"]:checked')?.value;

            if (!q1 || !q2 || !q3) {
                alert('Por favor, responda todas as 3 perguntas!');
                return;
            }

            let resultado = '';
            let mensagem = '';
            let link = '';

            // LÓGICA DO QUIZ
            if (q2 === 'procrastinacao' || q3 === '30') {
                resultado = 'Mentoria Momentum 🚀';
                mensagem = 'Você precisa de resultado RÁPIDO. Momentum é sua porta de entrada: 4 semanas, clareza + execução. R$ 797/mês ou R$ 1.497 trimestral.';
                link = 'https://wa.me/5541987516166?text=Descobri%20meu%20match:%20Mentoria%20Momentum!%20Gostaria%20de%20saber%20mais%20sobre%20resultado%20em%2030%20dias';
            } else if ((q2 === 'execucao' || q2 === 'clareza') && q3 === '3') {
                resultado = 'Método V.I.V.A 💎';
                mensagem = 'Você tem ideia clara mas está emperrado. V.I.V.A é seu programa: 12 semanas de transformação estruturada. Visão → Identidade → Vontade → Ação. R$ 4.497.';
                link = 'https://wa.me/5541987516166?text=Descobri%20meu%20match:%20M%C3%A9todo%20V.I.V.A!%20Gostaria%20de%20explorar%20este%20programa%20premium';
            } else if (q2 === 'clareza' && (q1 === 'nao' || q1 === 'parcial')) {
                resultado = 'Raízes & Visão 🌳';
                mensagem = 'Você precisa de clareza emocional + propósito profundo. Raízes & Visão é ideal: 8 sessões de estabilidade mental. R$ 2.497.';
                link = 'https://wa.me/5541987516166?text=Descobri%20meu%20match:%20Ra%C3%ADzes%20e%20Vis%C3%A3o!%20Gostaria%20de%20aprofundar%20em%20clareza%20e%20prop%C3%B3sito';
            } else if (q2 === 'carreira') {
                resultado = 'Reposicionamento Profissional 📈';
                mensagem = 'Você está em transição de carreira. Reposicionamento é seu programa: 3 meses de estratégia estruturada. CLT sólida + liberdade pra empreender depois. R$ 2.400.';
                link = 'https://wa.me/5541987516166?text=Descobri%20meu%20match:%20Reposicionamento%20Profissional!%20Gostaria%20de%20saber%20mais%20sobre%20transição%20de%20carreira';
            } else {
                resultado = 'Momentum ou Raízes & Visão';
                mensagem = 'Você pode começar com Momentum (porta de entrada rápida) ou Raízes & Visão (aprofundamento emocional). Converse comigo!';
                link = 'https://wa.me/5541987516166?text=Fiz%20o%20teste%20e%20gostaria%20de%20conversar%20para%20definir%20meu%20melhor%20programa';
            }

            // Mostra resultado
            document.getElementById('resultMessage').innerHTML = `
                <strong style="font-size: 1.3rem;">${resultado}</strong><br><br>
                ${mensagem}
            `;
            
            // Atualiza link do botão
            const btn = document.querySelector('#quizResult .btn-primary');
            btn.href = link;

            // Esconde quiz, mostra resultado
            document.getElementById('quiz').classList.remove('active');
            document.getElementById('quizResult').classList.add('active');
            
            window.scrollTo({ top: document.getElementById('quizResult').offsetTop - 100, behavior: 'smooth' });
        }
    </script>
</body>
</html>

